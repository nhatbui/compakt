{
  "manifest_version": 2,

  "name": "Twitch Compakt",
  "description": "Condense Twitch Chat",
  "version": "1.0",

  "background": {
    "scripts": ["checkIfTwitch.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Compakt"
  },

  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["jquery-3.1.0.slim.min.js", "contentscript.js"],
      "css": ["compaktstyles.css"]
    }
  ],

  "permissions": [
    "activeTab"
  ]
}
